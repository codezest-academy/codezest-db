# PostgreSQL Database URL (Required)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# 
# Examples:
# - Neon (Serverless): postgresql://user:password@ep-cool-name-123456.us-east-2.aws.neon.tech/codezest?sslmode=require
# - Supabase: postgresql://postgres:password@db.project.supabase.co:5432/postgres
# - Railway: postgresql://postgres:password@containers-us-west-1.railway.app:5432/railway
# - Local: postgresql://postgres:postgres@localhost:5432/codezest
DATABASE_URL="postgresql://user:password@host:5432/codezest?schema=public"

# MongoDB URL (Optional - for activity logs and analytics)
# Format: mongodb+srv://USER:PASSWORD@CLUSTER/DATABASE
#
# Examples:
# - MongoDB Atlas: mongodb+srv://user:password@cluster0.mongodb.net/codezest
# - Local: mongodb://localhost:27017/codezest
MONGODB_URL="mongodb+srv://user:password@cluster.mongodb.net/codezest"

# Prisma Configuration
# Log levels: query, info, warn, error
PRISMA_LOG_LEVEL="info"

# Node Environment
NODE_ENV="development"
